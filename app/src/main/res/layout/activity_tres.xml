<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".tres">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/textViewEventImage"
            android:src="@drawable/director"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/txtautor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dra. Sandra Julieta Saldivar González"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_below="@id/textViewEventImage"
    />

    <TextView
            android:id="@+id/txtedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: yuly@uabc.edu.mx"
            android:textSize="20dp"
            android:layout_below="@id/txtautor"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

    <TextView
            android:id="@+id/txtformacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formación Académica"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@id/txtedad"
            android:gravity="center"/>

    <TextView
            android:id="@+id/txtlic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctorado en Ciencias Administrativas, fecha de examen del grado 20 de Agosto 2012,de Facultad de Ciencias Administrativas de la U.A.B.C."
            android:textSize="15dp"
            android:layout_below="@id/txtformacion"
            android:gravity="center"/>

    <TextView
            android:id="@+id/txtlic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maestría en Ciencias en Tecnología de Redes e Informática fecha de examen de grado 03 de Agosto de 2005, CETYS, Centro de Enseñanza Técnica y Superior."
            android:textSize="15dp"
            android:layout_below="@id/txtlic"
            android:gravity="center"/>

    <TextView
            android:id="@+id/txtlic3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licenciado en Sistemas Computacionales, egresado de la Facultad de Ciencias Ingeniería,UA.B.C. "
            android:textSize="15dp"
            android:layout_below="@id/txtlic2"
            android:gravity="center"/>
</RelativeLayout>