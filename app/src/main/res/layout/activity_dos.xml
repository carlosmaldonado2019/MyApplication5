<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dos"
        android:orientation="horizontal">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/textViewEventImage"

                android:src="@drawable/images"
                android:layout_centerInParent="true"/>

        <TextView
                android:id="@+id/txtautor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Autor: Carlos Maldonado"
                android:textSize="20dp"
                android:gravity="center"

                android:layout_below="@id/textViewEventImage"
                />

        <TextView
                android:id="@+id/txtedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad: 32 aÃ±os"
                android:textSize="20dp"
                android:layout_below="@id/txtautor"
                android:layout_marginBottom="20dp"
                android:gravity="center"/>

        <TextView
                android:id="@+id/txtformacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formacion Academica"
                android:textSize="20dp"

                android:textStyle="bold"
                android:layout_below="@id/txtedad"
                android:gravity="center"/>

        <TextView
                android:id="@+id/txtlic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Licenciado en Informatica, egresado de la Facultad de Ciencias Administravias, UABC"
                android:textSize="20dp"
                android:layout_below="@id/txtformacion"
                android:gravity="center"/>
    </RelativeLayout>


</RelativeLayout>